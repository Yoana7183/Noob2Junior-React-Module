{
    "env": {
        "browser": true,
        "es2021": true,
        "jest": true
    },
    
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "plugin:react/jsx-runtime",
        "plugin:prettier/recommended",
        "prettier"
    ],

    "overrides": [
    ],

    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
          }
    },

    "plugins": [
        "react",
        "prettier"
    ],

    "rules": {
        "prettier/prettier": "error",
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error"
    },

    "settings": {
        "react": {
          "version": "detect"
        }
      }
}
